@model VlammendVarkenBackend.Models.ViewModels.GerechtenViewModel

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Nagerechten</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
</head>
<body class="bg-gray-50 flex items-center justify-center min-h-screen p-4 font-sans">
  <div class="w-full max-w-6xl bg-white rounded-xl shadow-lg p-6 md:p-8 space-y-10">
    <main class="space-y-12">
      <section>
        <h2 class="text-2xl font-bold text-gray-800 mb-4 text-center">Kies een Nagerecht</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          @foreach (var nagerecht in Model.Gerechten)
          {
            <div class="p-6 flex flex-col bg-gray-50 rounded-lg border border-gray-200">
              <h3 class="text-xl font-bold text-gray-800 mb-2">@nagerecht.Naam</h3>
              <p class="text-lg font-bold text-gray-800 mb-4">€ @nagerecht.Prijs.ToString("F2")</p>
              <form method="post" asp-controller="Bestelling" asp-action="Toevoegen" class="w-full md:w-auto">
                <input type="hidden" name="naam" value="@nagerecht.Naam" />
                <input type="hidden" name="soort" value="@nagerecht.Soort" />
                <input type="hidden" name="bijgerecht" value="@nagerecht.Bijgerecht" />
                <input type="hidden" name="groente" value="@nagerecht.Groente" />
                <input type="hidden" name="saus" value="@nagerecht.Saus" />
                <input type="hidden" name="allergenen" value="@string.Join(", ", @nagerecht.Allergenen.Select(a => a.Symbool))" />
                <input type="hidden" name="prijs" value="@nagerecht.Prijs.ToString("F2")" />
                <button type="submit" class="w-full flex items-center justify-center bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded-lg transition-transform hover:scale-105" aria-label="Voeg @nagerecht.Naam toe aan bestelling">
                  <span class="material-icons text-base mr-2" aria-hidden="true">add_shopping_cart</span>
                  Toevoegen
                </button>
              </form>
            </div>
          }
        </div>
      </section>
      <section id="besteloverzicht">
        <div class="overflow-x-auto">
          <table class="min-w-full table-auto border border-gray-200 rounded-lg overflow-hidden">
            <thead class="bg-gray-100 text-sm text-gray-600 uppercase text-left">
              <tr>
                <th class="px-4 py-3">Naam</th>
                <th class="px-4 py-3">Categorie</th>
                <th class="px-4 py-3">Bijgerecht</th>
                <th class="px-4 py-3">Groente</th>
                <th class="px-4 py-3">Saus</th>
                <th class="px-4 py-3">Allergenen</th>
                <th class="px-4 py-3 text-right">Actie</th>
                <th class="px-4 py-3 text-right">Prijs</th>
              </tr>
            </thead>
            <tbody id="bestellingTabel" class="text-sm text-gray-700 divide-y divide-gray-200">
            </tbody>
            <tfoot class="bg-gray-50 font-bold">
              <tr class="border-t-2 border-gray-200">
                <td colspan="7" class="px-4 py-4 text-left">Totaal</td>
                <td id="totaalPrijs" class="px-4 py-4 text-right">€-</td>
              </tr>
            </tfoot>
          </table>
        </div>
      </section>
    </main>
    <nav class="flex flex-col md:flex-row gap-4 pt-4 border-t border-gray-200">
      <a href="javascript:history.back()" class="w-full md:w-auto flex items-center justify-center font-bold py-3 px-4 rounded-lg transition duration-300 bg-gray-200 hover:bg-gray-300 text-gray-800">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Terug naar vorige stap
      </a>
      <a href="/" class="w-full md:w-auto flex items-center justify-center font-bold py-3 px-4 rounded-lg transition duration-300 bg-gray-800 hover:bg-gray-900 text-white">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
        </svg>
        Terug naar hoofdmenu
      </a>
    </nav>
  </div>
  <script src="~/JS/Script.js"></script>
</body>
