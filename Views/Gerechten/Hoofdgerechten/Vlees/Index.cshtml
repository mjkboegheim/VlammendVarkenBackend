<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Vleesgerechten</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
</head>
<body class="bg-gray-50 flex items-center justify-center min-h-screen p-4 font-sans">

  <div class="w-full max-w-6xl bg-white rounded-xl shadow-lg p-6 md:p-8 space-y-8">
    
    <!-- Header -->
    <header>
      <h2 class="text-2xl font-bold text-gray-800 mb-4 text-center">Kies een vleesgerecht</h2>
    </header>

    <!-- Keuzekaarten -->
    <section>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Ossenhaas -->
        <div class="p-6 flex flex-col bg-gray-50 rounded-lg border border-gray-200">
          <h3 class="text-xl font-bold text-gray-800 mb-2">Ossenhaas</h3>
          <div class="text-sm text-gray-600 space-y-1 mb-4">
            <p><strong>Bijgerecht:</strong> Gebakken aardappel</p>
            <p><strong>Groente:</strong> Rauwkost komkommer</p>
            <p><strong>Saus:</strong> Champignon</p>
          </div>
          <a href="#" class="mt-auto w-full inline-block text-center bg-indigo-600 text-white font-semibold py-2 px-4 rounded-lg transition-all duration-200 hover:bg-indigo-700 hover:scale-105">
            Kies & Aanpassen
          </a>
        </div>

        <!-- Steak -->
        <div class="p-6 flex flex-col bg-gray-50 rounded-lg border border-gray-200">
          <h3 class="text-xl font-bold text-gray-800 mb-2">Steak</h3>
          <div class="text-sm text-gray-600 space-y-1 mb-4">
            <p><strong>Bijgerecht:</strong> Gepofte aardappel</p>
            <p><strong>Groente:</strong> Sperziebonen <span class="text-xs text-green-600 font-semibold">+€1.00</span></p>
            <p><strong>Saus:</strong> Peper</p>
          </div>
          <a href="#" class="mt-auto w-full inline-block text-center bg-indigo-600 text-white font-semibold py-2 px-4 rounded-lg transition-all duration-200 hover:bg-indigo-700 hover:scale-105">
            Kies & Aanpassen
          </a>
        </div>

        <!-- Hamburger -->
        <div class="p-6 flex flex-col bg-gray-50 rounded-lg border border-gray-200">
          <h3 class="text-xl font-bold text-gray-800 mb-2">Hamburger</h3>
          <div class="text-sm text-gray-600 space-y-1 mb-4">
            <p><strong>Bijgerecht:</strong> Vlaamse friet</p>
            <p><strong>Groente:</strong> Maiskolf</p>
            <p><strong>Saus:</strong> BBQ</p>
          </div>
          <a href="#" class="mt-auto w-full inline-block text-center bg-indigo-600 text-white font-semibold py-2 px-4 rounded-lg transition-all duration-200 hover:bg-indigo-700 hover:scale-105">
            Kies & Aanpassen
          </a>
        </div>
      </div>
    </section>

    <!-- Besteloverzicht tabel -->
    <section>
      <div class="overflow-x-auto">
        <table class="min-w-full table-auto border border-gray-200 rounded-lg overflow-hidden">
          <thead class="bg-gray-100 text-sm text-gray-600 uppercase text-left">
            <tr>
              <th class="px-4 py-3">Naam</th>
              <th class="px-4 py-3">Bijgerecht</th>
              <th class="px-4 py-3">Groente</th>
              <th class="px-4 py-3">Saus</th>
              <th class="px-4 py-3 text-right">Actie</th>
              <th class="px-4 py-3 text-right">Prijs</th>
            </tr>
          </thead>
          <tbody class="text-sm text-gray-700 divide-y divide-gray-200">
            <tr>
              <td class="px-4 py-3 font-semibold">-</td>
              <td class="px-4 py-3">-</td>
              <td class="px-4 py-3">-</td>
              <td class="px-4 py-3">-</td>
              <td class="px-4 py-3 text-right">
                <button class="text-red-500 hover:text-red-700" aria-label="Verwijderen">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6M1 7h22" />
                  </svg>
                </button>
              </td>
              <td class="px-4 py-3 text-right font-semibold">€-</td>
            </tr>
          </tbody>
          <tfoot class="bg-gray-50 font-bold">
            <tr class="border-t-2 border-gray-200">
              <td colspan="4" class="px-4 py-4 text-left">Totaal</td>
              <td></td>
              <td class="px-4 py-4 text-right">€-</td>
            </tr>
          </tfoot>
        </table>
      </div>
    </section>

    <!-- Footer -->
    <footer class="flex flex-col md:flex-row gap-4 pt-4 border-t border-gray-200">
      <button class="w-full flex items-center justify-center font-bold py-3 px-4 rounded-lg transition duration-300 bg-gray-200 hover:bg-gray-300 text-gray-800">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Terug naar vorige stap
      </button>
      <button class="w-full flex items-center justify-center font-bold py-3 px-4 rounded-lg transition duration-300 bg-gray-800 hover:bg-gray-900 text-white">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
        </svg>
        Terug naar hoofdmenu
      </button>
    </footer>
  </div>

