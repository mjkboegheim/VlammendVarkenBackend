@{
    ViewData["Title"] = "Besteloverzicht";
}

<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="utf-8" />
    <title>Besteloverzicht</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
</head>
<body class="bg-gray-100 min-h-screen flex items-center justify-center p-6 font-sans">

<div class="w-full max-w-5xl bg-white p-8 rounded-xl shadow-lg space-y-8">

    <header class="text-center">
        <h1 class="text-3xl font-bold text-gray-900">Besteloverzicht</h1>
        <p class="text-gray-500">Controleer hier je bestelling voordat je deze bevestigt.</p>
    </header>

    <section>
        <div class="overflow-x-auto">
            <table class="min-w-full table-auto border border-gray-200 rounded-lg overflow-hidden">
                <thead class="bg-gray-100 text-sm text-gray-600 uppercase text-left">
                    <tr>
                        <th class="px-4 py-3">Naam</th>
                        <th class="px-4 py-3">Categorie</th>
                        <th class="px-4 py-3">Bijgerecht</th>
                        <th class="px-4 py-3">Groente</th>
                        <th class="px-4 py-3">Saus</th>
                        <th class="px-4 py-3">Allergieën</th>
                        <th class="px-4 py-3 text-right">Prijs</th>
                    </tr>
                </thead>
                <tbody id="bestellingTabel" class="text-sm text-gray-800 divide-y divide-gray-200">
                    <!-- Wordt via JavaScript gevuld -->
                </tbody>
                <tfoot class="bg-gray-50 text-lg font-bold">
                    <tr>
                        <td colspan="6" class="px-4 py-4 text-left">Totaal</td>
                        <td id="totaalPrijs" class="px-4 py-4 text-right">€0.00</td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </section>

    <section class="text-center">
        <button onclick="bevestigBestelling()" class="bg-green-600 hover:bg-green-700 text-white font-semibold py-3 px-6 rounded-lg transition duration-200">
            Bestelling bevestigen
        </button>
    </section>

    <section class="text-center text-sm text-gray-500">
        <a href="javascript:history.back()" class="text-blue-600 hover:underline">← Terug naar menu</a>
    </section>

</div>

<script>
    function tekenBestelOverzicht() {
        const tbody = document.getElementById("bestellingTabel");
        const totaalElement = document.getElementById("totaalPrijs");
        tbody.innerHTML = "";
        let totaal = 0;

        const winkelmandje = localStorage.getItem("winkelmandje");
        if (!winkelmandje) return;

        const gerechten = JSON.parse(winkelmandje);

        gerechten.forEach(gerecht => {
            const prijs = parseFloat(gerecht.prijs);
            totaal += prijs;

            const rij = `
                <tr>
                    <td class="px-4 py-3 font-medium">${gerecht.naam}</td>
                    <td class="px-4 py-3">${gerecht.categorie || "-"}</td>
                    <td class="px-4 py-3">${gerecht.bijgerecht || "-"}</td>
                    <td class="px-4 py-3">${gerecht.groente || "-"}</td>
                    <td class="px-4 py-3">${gerecht.saus || "-"}</td>
                    <td class="px-4 py-3">${(gerecht.allergieen || []).join(" ") || "-"}</td>
                    <td class="px-4 py-3 text-right">€${prijs.toFixed(2)}</td>
                </tr>`;
            tbody.innerHTML += rij;
        });

        totaalElement.textContent = `€${totaal.toFixed(2)}`;
    }

    function bevestigBestelling() {
        alert("Je bestelling is bevestigd. Dank je wel!");
        localStorage.removeItem("winkelmandje");
        window.location.href = "/"; // Of een bedankpagina
    }

    document.addEventListener("DOMContentLoaded", tekenBestelOverzicht);
</script>

</body>
</html>